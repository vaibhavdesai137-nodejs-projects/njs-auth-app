            .col-lg-6.col-md-12.col-sm-12.col-xs-12
                ul
                    li
                        a.btn.btn-success.links(title='Source Code for this website', target='_blank', href='https://github.com/vaibhavdesai137-nodejs-projects/njs-auth-app')
