extends layout

block content

    h1 Login
    p Please login using the form below
    br
    br
    
    form(method='post', action='/users/login', enctype='multipart/form-data')
        .form-group
            label Username
            input.form-control(type='text', name='username')
        .form-group
            label Password
            input.form-control(type='password', name='password')
        button.btn.btn-default(type='submit') Login
