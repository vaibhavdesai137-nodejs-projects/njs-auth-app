extends layout

block content

    h1 Login
    p Please login using the form below
    br
    br
    
    form(method='post', id='loginForm', action='/users/login', enctype='multipart/form-data')
        .form-group
            label Username
            input.form-control(type='text', name='username')
        .form-group
            label Password
            input.form-control(type='password', name='password')
        a.btn.btn-default(href='javascript:{}', onclick='document.getElementById("loginForm").submit(); return false;')
            Login
        a.btn.btn-default(href='javascript:{}', onclick='window.location.href = "users/register"')
            New User? Register Here
        

